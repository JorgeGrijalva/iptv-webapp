{
  "version": 2,
  "builds": [
    { "src": "api/proxy.js", "use": "@vercel/node" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",
      "dest": "/api/proxy.js"
    },
    {
      "src": "/live/(.*)",
      "dest": "/api/proxy.js"
    },
    {
      "src": "/movie/(.*)",
      "dest": "/api/proxy.js"
    },
    {
      "src": "/series/(.*)",
      "dest": "/api/proxy.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 